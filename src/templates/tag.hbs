{{! The big featured header }}
<header>
    <nav>
        <a href="{{@blog.url}}">Home</a>
        <a href="{{@blog.url}}/tag/{{tag.slug}}/rss/">{{tag.name}}</a>
    </nav>
    <div>
        <div>
            <h1>{{tag.name}}</h1>
            <h2>A {{pagination.total}}-post collection</h2>
        </div>
    </div>
</header>

